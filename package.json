{
  "name": "@hund-press/font-families",
  "version": "1.10.0",
  "description": "Comprehensive font resource platform with processing, community curation, and public catalog site",
  "main": "dist/modules/index.js",
  "type": "module",
  "scripts": {
    "build": "node build-tools/workflows/build.js",
    "scan": "node build-tools/scanners/ufr-scanner.js",
    "validate": "node build-tools/workflows/validate.js",
    "generate-modules": "node build-tools/generators/module-generator.js",
    "generate-catalog": "node build-tools/generators/catalog-generator.js",
    "generate-subsets": "node build-tools/generators/subset-generator.js",
    "generate-docs": "node build-tools/generators/doc-generator.js",
    "build-site": "eleventy --config=eleventy.config.js",
    "dev": "npm run build && npm run build-site",
    "version:check": "node build-tools/scripts/version-sync.js check",
    "version:sync": "node build-tools/scripts/version-sync.js sync",
    "version:bump": "node build-tools/scripts/version-sync.js bump",
    "version:current": "node build-tools/scripts/version-sync.js current",
    "clean": "rm -rf dist .font-families-build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint build-tools/ src/ tests/",
    "lint:fix": "eslint --fix build-tools/ src/ tests/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "release": "npm run build && npm run test && npm version patch && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hund-press/font-families.git"
  },
  "keywords": [
    "fonts",
    "typography",
    "web-fonts",
    "font-families",
    "open-fonts",
    "UFR",
    "font-processing",
    "font-catalog",
    "eleventy"
  ],
  "author": "Derek Odegard (dereko@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hund-press/font-families/issues"
  },
  "homepage": "https://hund-press.github.io/font-families/",
  "files": [
    "dist/**/*",
    "fonts/open-fonts/**/*",
    "aspekta/**/*",
    "README.md",
    "LICENSE.md",
    "CONTRIBUTING.md"
  ],
  "dependencies": {
    "@11ty/eleventy": "^3.0.1-alpha.5",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/pixelpony"
  }
}
